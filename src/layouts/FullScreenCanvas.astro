---
import BaseLayout from "~/layouts/Base.astro";
interface Props {
  title?: string;
}

const { title } = Astro.props;
---

<BaseLayout title={title}>
  <style slot="style" is:global>
    body {
      margin: 0;
    }

    html,
    body {
      overflow: hidden;
    }

    canvas {
      position: fixed;
      top: 0;
      left: 0;
      outline: none;
    }
  </style>

  <div class="app"></div>
</BaseLayout>
