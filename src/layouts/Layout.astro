---
import Header from "~/components/Header.astro";

interface Props {
  title?: string;
}

const { title = "牢骚百物语" } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="title" content={title} />
    <meta name="description" content="一个自学前端的大龄肥宅的技术笔记" />
    <meta name="keywords" content="技术笔记, 前端开发, 编程教程, Web 开发" />
    <meta name="robots" content="index, follow" />
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="language" content="Chinese" />
    <meta name="revisit-after" content="1 days" />
    <meta name="author" content="madaocai@gmail.com" />

    <meta
      name="viewport"
      content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0, minimal-ui"
    />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>

    <!-- https://github.com/ota-meshi/eslint-plugin-astro/issues/311 -->
    <style is:global>
      html {
        font-family:
          -apple-system,
          BlinkMacSystemFont,
          Segoe UI,
          Helvetica,
          Arial,
          sans-serif,
          Apple Color Emoji,
          Segoe UI Emoji;
      }

      html,
      body {
        height: 100%;
      }

      code {
        font-family:
          Menlo,
          Monaco,
          Lucida Console,
          Liberation Mono,
          DejaVu Sans Mono,
          Bitstream Vera Sans Mono,
          Courier New,
          monospace;
      }

      a:hover,
      button:hover {
        opacity: 0.7 !important;
      }

      a:active {
        color: inherit;
      }
    </style>

    <slot name="style" />
  </head>
  <body
    class="flex h-full w-full flex-col items-center overflow-hidden bg-gradient-to-br from-[#D3E0EA] via-[#D6E4E5] to-[#EAE3D2] text-primary"
  >
    <Header />
    <main class="main-block flex-1 overflow-x-auto hidden-scrollbar">
      <slot />
    </main>
    <footer>
      <a
        href="https://www.flaticon.com/free-icons/loch-ness-monster"
        title="loch ness monster icons"
      >
        Loch ness monster icons created by Freepik - Flaticon
      </a>
      <a
        href="https://www.flaticon.com/free-icons/miscellaneous"
        title="miscellaneous icons"
      >
        Miscellaneous icons created by aputpalace - Flaticon
      </a>
      <a
        href="https://www.flaticon.com/free-icons/unicorn"
        title="unicorn icons"
      >
        Unicorn icons created by Roundicons Premium - Flaticon
      </a>
    </footer>
  </body>
</html>
